generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

///////////////////////////
// Core Alerts
///////////////////////////

model Alerts {
  id         String      @id @default(uuid())
  type       AlertType
  recipient  String
  status     StatusType  @default(queued)
  retryCount Int         @default(0)
  payload    Json

  scheduledAt DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  metrics    AlertDeliveryLog[]

  @@index([status])
  @@index([createdAt])
}

enum AlertType {
  EMAIL
  PUSH
}

enum StatusType {
  queued
  scheduled
  cancelled
  processing
  sent
  failed
}



///////////////////////////
// PushDevices
///////////////////////////

model PushDevice {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  platform  PushPlatform

  createdAt DateTime @default(now())

  @@index([userId])
}

enum PushPlatform {
  web
  android
  ios
}



///////////////////////////
// Webhooks
///////////////////////////

model Webhook {
  id        String   @id @default(uuid())
  url       String
  secret    String
  isActive  Boolean  @default(true)
  metrics   WebhookDeliveryLog[]

  createdAt DateTime @default(now())
}



///////////////////////////
// WebhookDeliveryLogs
///////////////////////////


model WebhookDeliveryLog {
  id        String   @id @default(uuid())
  webhookId String
  event     String
  payload   Json
  status    DeliveryStatus
  error     String?

  createdAt DateTime @default(now())

  webhook   Webhook  @relation(fields: [webhookId], references: [id])

  @@index([webhookId])
  @@index([createdAt])
}




///////////////////////////
// AlertDeliveryLogs
///////////////////////////


model AlertDeliveryLog {
  id        String   @id @default(uuid())
  alertId   String
  attempt   Int
  status    DeliveryStatus
  error     String?

  createdAt DateTime @default(now())

  alert     Alerts    @relation(fields: [alertId], references: [id])

  @@index([alertId])
  @@index([createdAt])
}

enum DeliveryStatus {
  success
  error
}



